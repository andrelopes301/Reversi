<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/visualizarPerfilFragment"
        tools:context=".fragmentos.perfil.VisualizarPerfilFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="50dp"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            
            >

            <EditText
                android:id="@+id/textId_NomeJogador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="@string/nameplayer"
                android:inputType="text"
                android:lines="1"
                android:textStyle="bold"
                android:maxLength="20"
                tools:ignore="Autofill"
                android:enabled="false">
            </EditText>

            <EditText
                android:id="@+id/textId_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="8"
                android:hint="@string/e_mail"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLength="50"
                tools:ignore="Autofill"
                android:enabled="false">
            </EditText>


            <Spinner
                android:id="@+id/nacionalidadesSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                >
            </Spinner>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="200dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/Btn_AlterarDados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="@string/changedata"
                android:padding="15dp"
                android:textAllCaps="false"
                android:onClick="onAlterarDados"
                android:textSize="16sp">
            </Button>
            <Button
                android:id="@+id/Btn_TerminarSessao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
               android:layout_marginStart="100dp"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:onClick="onTerminarSessao"
                android:textSize="16sp"
                >
            </Button>


        </LinearLayout>


    </FrameLayout>